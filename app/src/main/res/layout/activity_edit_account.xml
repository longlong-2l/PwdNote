<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.PwdNote.FullscreenContainer"
    tools:context=".ui.home.EditAccountActivity">

    <EditText
        android:id="@+id/etAccountName"
        android:layout_width="302dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_edit_account"
        android:hint="哪个平台的账号？"
        android:paddingStart="55dp"
        android:paddingEnd="0dp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/etAccountName"
        android:layout_alignTop="@id/etAccountName"
        android:layout_alignBottom="@id/etAccountName"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:text="名称:"
        android:textColor="#444444"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etAccountPwd"
        android:layout_width="302dp"
        android:layout_height="51dp"
        android:layout_below="@id/etAccountName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/bg_edit_account"
        android:hint="可以不填"
        android:paddingStart="55dp"
        android:paddingEnd="0dp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/etAccountPwd"
        android:layout_alignTop="@id/etAccountPwd"
        android:layout_alignBottom="@id/etAccountPwd"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:text="密码:"
        android:textColor="#444444"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etAccountType"
        android:layout_width="302dp"
        android:layout_height="51dp"
        android:layout_below="@id/etAccountPwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/bg_edit_account"
        android:hint="生活、学习、工作等"
        android:paddingStart="55dp"
        android:paddingEnd="0dp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/etAccountType"
        android:layout_alignTop="@id/etAccountType"
        android:layout_alignBottom="@id/etAccountType"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:text="类型:"
        android:textColor="#444444"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etPwdDes"
        android:layout_width="302dp"
        android:layout_height="102dp"
        android:layout_below="@id/etAccountType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/bg_edit_account"
        android:gravity="start"
        android:hint="密码提示及描述，这个比较重要"
        android:paddingStart="55dp"
        android:paddingTop="10dp"
        android:paddingEnd="0dp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/etPwdDes"
        android:layout_alignTop="@id/etPwdDes"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="描述:"
        android:textColor="#444444"
        android:textSize="14sp" />

</RelativeLayout>